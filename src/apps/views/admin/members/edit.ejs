<%- include('../layout/head.ejs',{title:"Sửa thành viên"}) %>
<%- include('../layout/header.ejs') %>
<%- include('../layout/sidebar.ejs') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/admin/dashboard"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a></li>
      <li><a href="/admin/members">Quản lý thành viên</a></li>
      <li class="active">Sửa thành viên</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sửa thành viên: <%=  %></h1>
    </div>
  </div>
  <!--/.row-->

  <form action="/admin/members/update/<%= member._id %>" id="form_update" role="form" method="post">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Họ và tên</label>
          <input class="form-control" name="fullname" type="text" autofocus="" value="<%= member.fullname %>" required />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Email</label>
          <input class="form-control" name="email" type="email" autofocus="" value="<%= member.email %>" required />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Số điện thoại</label>
          <input class="form-control" name="phone" type="text" autofocus="" value="<%= member.phone %>" required />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Tài khoản</label>
          <input class="form-control" name="account" type="text" autofocus="" value="<%= member.account %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Mật khẩu</label>
          <input class="form-control" name="password" type="password" autofocus="" value="<%= member.password %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Phân quyền</label>
          <select class="form-control" name="role" id="role">
            <option selected>-- Chọn phân quyền --</option>
            <option value="admin">admin</option>
            <option value="member">member</option>
          </select>
        </div>
      </div>
    </div>
    <button name="sbm" type="submit" class="btn btn-success">Cập nhật</button>
    <a name="" id="" class="btn btn-info" href="/admin/members" role="button">Quay lại</a>


  </form>


</div>

<script>
  $(document).ready(function() {
    $('#form_update').validate({
      rules: {
        fullname: {
          required: true,
        },
        email: {
          required: true,
          email: true,
        },
        phone: {
          required: true,
          minlength: 10,
          maxlength: 10
        }
      },
      messages: {
        fullname: {
          required: "Họ tên không để trống"
        },
        email: {
          required: "Email không để trống",
          email: "Không đúng định dạng email",
        },
        phone: {
          required: "Số điện thoại không để trống",
          minlength: "Số điện thoại không đúng định dạng",
          maxlength: "Số điện thoại không đúng định dạng"
        }
      }
    });
  });
</script>

</body>

</html>