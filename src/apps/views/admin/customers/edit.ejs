<%- include('../layout/head.ejs',{title:"Sửa khách hàng"}) %>
<%- include('../layout/header.ejs') %>
<%- include('../layout/sidebar.ejs') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/admin/dashboard"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a></li>
      <li><a href="/admin/customers">Quản lý khách hàng</a></li>
      <li class="active">Sửa khách hàng</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sửa thành viên: <%= customer.name %></h1>
    </div>
  </div>
  <!--/.row-->

  <form action="/admin/customers/update/<%= customer._id %>" id="form_update" role="form" method="post">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Họ và tên</label>
          <input class="form-control" id="fullname" name="fullname" type="text" autofocus="" value="<%= customer.fullname %>" />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Email</label>
          <input class="form-control" id="email" name="email" type="email" autofocus="" value="<%= customer.email %>" required />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Số điện thoại</label>
          <input class="form-control" name="phone" type="text" autofocus="" value="<%= customer.phone %>" required />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Tài khoản</label>
          <input class="form-control" name="account" type="text" autofocus="" value="<%= customer.account %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Mật khẩu</label>
          <input class="form-control" name="password" type="password" autofocus="" value="<%= customer.password %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Hình ảnh:</label>
          <input type="file" class="form-control-file" name="thumnail" id="" placeholder="" aria-describedby="fileHelpId">
        </div>
      </div>
    </div>
    <button name="sbm" type="submit" class="btn btn-success">Cập nhật</button>
    <a name="" id="" class="btn btn-info" href="/admin/customers" role="button">Quay lại</a>



  </form>


</div>
<script>
  $(document).ready(function() {
    $('#form_update').validate({
      rules: {
        fullname: {
          required: true,
        },
        email: {
          required: true,
          email: true,
        },
        phone: {
          required: true,
          minlength: 10,
          maxlength: 10
        }
      },
      messages: {
        fullname: {
          required: "Họ tên không để trống"
        },
        email: {
          required: "Email không để trống",
          email: "Không đúng định dạng email",
        },
        phone: {
          required: "Số điện thoại không để trống",
          minlength: "Số điện thoại không đúng định dạng",
          maxlength: "Số điện thoại không đúng định dạng"
        }
      }
    });
  });
</script>

</body>

</html>