<%- include('../layout/head.ejs',{title:"Sửa bình luận"}) %>
<%- include('../layout/header.ejs') %>
<%- include('../layout/sidebar.ejs') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/admin/dashboard"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a></li>
      <li><a href="/admin/products">Quản lý bình luận</a></li>
      <li class="active">Sửa bình luận</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sửa bình luận</h1>
    </div>
  </div>
  <!--/.row-->

  <form action="/admin/comments/update/<%= comment._id %>" role="form" method="post">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Họ tên</label>
          <input class="form-control" name="name" type="text" autofocus="" value="<%= comment.fullname %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Email</label>
          <input class="form-control" name="name" type="text" autofocus="" value="<%= comment.email %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Điện thoại</label>
          <input class="form-control" name="name" type="text" autofocus="" value="<%= comment.customer_id.phone %>" readonly />
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="">Sản phẩm</label>
          <input class="form-control" name="name" type="text" autofocus="" value="<%= comment.pro_id.name %>" readonly />
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-check">
          <label for="">Duyệt bài</label> <br>
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="active" id="" value="1" checked>
            Duyệt
            <input type="radio" class="form-check-input" name="active" id="" value="0">
            Không duyệt
          </label>
        </div>
      </div>
    </div>

    <button name="sbm" type="submit" class="btn btn-success">Cập nhật</button>
    <a name="" id="" class="btn btn-info" href="/admin/comments" role="button">Quay lại</a>

  </form>


</div>


<%- include('../layout/footer.ejs') %>