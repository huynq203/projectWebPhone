<%- include('../layout/head.ejs',{title:"Thêm danh mục"}) %>
<%- include('../layout/header.ejs') %>
<%-include('../layout/sidebar.ejs') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li>
        <a href="/admin/dashboard"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a>
      </li>
      <li><a href="/admin/categories">Quản lý danh mục</a></li>
      <li class="active">Thêm danh mục</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Thêm danh mục</h1>
    </div>
  </div>
  <!--/.row-->

  <form action="/admin/categories/store" role="form" method="post">
    <div class="col-md-6">
      <div class="form-group">
        <label for="title">Tên danh mục</label>
        <input class="form-control" required name="title" type="text" autofocus="" />
      </div>
      <div class="form-group">
        <label for="description">Mô tả</label>
        <textarea name="description" class="form-control" id="" cols="30" rows="10"></textarea>
        <script>
          // Replace the <textarea id="editor1"> with a CKEditor 4
          // instance, using default configuration.
          CKEDITOR.replace('description');
        </script>
      </div>

      <button name="sbm" type="submit" class="btn btn-success">Thêm mới</button>
      <button type="reset" class="btn btn-primary">Làm mới</button>
    </div>
  </form>
</div>

<%- include('../layout/footer.ejs') %>