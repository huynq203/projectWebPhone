<%- include('../layout/head.ejs',{title:"Sửa danh mục"}) %>
<%- include('../layout/header.ejs',{account:accountLogin}) %>
<%- include('../layout/sidebar.ejs') %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li> <a href="/admin/products">Quản lý danh mục</a> </li>        
            <li class="active"> Sửa danh mục </li>
            <li class="active"><%= category.title %></li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sửa danh mục : <%= category.title %></h1>
        </div>
    </div><!--/.row-->
    <form action="/admin/categories/update/<%= category._id %>" role="form" method="post">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Tên danh mục</label>
                <input class="form-control" required name="title" type="text" autofocus="" value="<%= category.title %>" />
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea name="description" class="form-control" id="" cols="30" rows="10" ><%= category.description %> </textarea>
            </div>
            <button name="sbm" type="submit" class="btn btn-warning">Cập nhật</button>
            <a name="" id="" class="btn btn-primary" href="/admin/categories" role="button">Quay lại</a>
        </div>
    </form>
</div>


<%- include('../layout/footer.ejs') %>