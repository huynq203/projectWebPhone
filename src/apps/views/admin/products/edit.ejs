<%- include('../layout/head.ejs',{title:"Sửa sản phẩm"}) %>
<%- include('../layout/header.ejs') %>
<%- include('../layout/sidebar.ejs') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="/admin/dashboard"><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use>
          </svg></a></li>
      <li><a href="/admin/products">Quản lý sản phẩm</a></li>
      <li class="active">Sửa sản phẩm</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sửa sản phẩm: <%= product.name %></h1>
    </div>
  </div>
  <!--/.row-->
  <form id="form_edit" action="/admin/products/update/<%= product._id %>" method="post" role="form" enctype="multipart/form-data">
    <div class="col-md-6">
      <div class="form-group">
        <label for="">Tên sản phẩm</label>
        <input class="form-control" id="name" name="name" type="text" autofocus="" value="<%= product.name %>" required />
      </div>
      <div class="form-group">
        <label for="">Giá sản phẩm</label>
        <input class="form-control" id="price" name="price" type="number" autofocus="" value="<%= product.price %>" required />
      </div>

      <div class="form-group">
        <label for="">Bảo hành</label>
        <select class="form-control" name="warranty" id="warranty">
          <option>3 tháng</option>
          <option>6 tháng</option>
          <option>9 tháng</option>
          <option>12 tháng</option>
        </select>
      </div>
      <div class="form-group">
        <label for="">Phụ kiện</label>
        <input class="form-control" name="accessories" id="accessories" type="text" value="<%= product.accessories %>" autofocus="" required />
      </div>
      <div class="form-group">
        <label for="">Khuyến mãi</label>
        <input class="form-control" name="promotion" id="promotion" type="text" value="<%= product.promotion %>" autofocus="" />
      </div>

      <div class="form-group">
        <label for="">Tình trạng</label>
        <select class="form-control" name="status" id="">
          <option>Máy mới 100%</option>
          <option>Máy cũ 99%</option>
          <option>Máy cũ 50%</option>
        </select>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="">Ảnh sản phẩm</label>
        <input id="thubnail" name="thumbnail" type="file" autofocus="" />
        <img src="/public/images/<%= product.thumbnail %>" style="margin-top: 10px;width: 100px;" alt="">
      </div>

      <div class="form-group">
        <label for="">Danh mục</label>
        <select name="cat_id" id="" class="form-control">
          <option value="<%= product.cat_id._id%>" selected><%= product.cat_id.title %></option>
          <% for (category of listcategory){ %>
          <option value=<%=category._id %>><%= category.title %>
          </option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="">Trạng thái</label>
        <select name="is_stock" id="" class="form-control">
          <% if(product.is_stock){ %>
          <option value=1 selected> Còn hàng</option>
          <option value=0> Hết hàng</option>
          <% }else{ %>
          <option value=1> Còn hàng</option>
          <option value=0 selected> Hết hàng</option>
          <% } %>
        </select>
      </div>
      <div class="form-group">
        <label for="">Sản phẩm nổi bật</label>
        <div class="checkbox">
          <label><input name="featured" type="checkbox" autofocus="" value=1 /> Nổi bật</label>
        </div>

      </div>
      <div class="form-group">
        <label for="">Mô tả sản phẩm</label>
        <textarea class="form-control" required name="description" id="" cols="30" rows="3"><%- product.description %></textarea>
        <script>
          CKEDITOR.replace('description');
        </script>
      </div>
      <button name="sbm" type="submit" class="btn btn-success">Cập nhật</button>
      <a name="" id="" class="btn btn-info" href="/admin/products" role="button">Quay lại</a>
    </div>

  </form>


</div>


<%- include('../layout/footer.ejs') %>